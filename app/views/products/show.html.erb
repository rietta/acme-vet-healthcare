<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Published:</strong>
  <%= @product.published %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

<h2>Shopping Cart</h2>
<% if @cart&.contains?(product_id: @product.id) %>
  <%= link_to('Remove from Cart', remove_cart_path(product_id: @product.id)) %>
<% else %>
  <%= link_to('Add to Cart', add_cart_path(product_id: @product.id)) %>
<% end %>